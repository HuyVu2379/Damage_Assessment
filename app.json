{
  "expo": {
    "name": "AI phát hiện hư hại công trình",
    "slug": "bdam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.jpg",
    "userInterfaceStyle": "light",
    "scheme": "bdam",
    "platforms": [
      "ios",
      "android"
    ],
    "splash": {
      "image": "./assets/iconCongTrinh.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền microphone để thu âm tin nhắn"
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ],
      "package": "com.huyvu.bdam"
    },
    "plugins": [
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "14c5a358-4719-4136-9f94-8d82dc628c98"
      }
    },
    "owner": "huyvu2379"
  }
}